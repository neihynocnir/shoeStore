<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Information -->
    <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0' />
    <title>Cool Sneakers</title>
    <!-- External CSS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Amaranth:wght@700&family=Titillium+Web:ital,wght@0,300;1,300&display=swap" rel="stylesheet">
    <!-- App CSS -->
    <link rel="stylesheet" href="/styles/layout.css" type="text/css"/>
  </head>
  <header>
    <%- include('partials/_header') %>
  </header>
  <body>
   <!-- Featured Sneakers-->
  <section class="wrap card-body">
    <section class="body-section">
      <h1>Featured Sneakers</h1>
      <div id="carousel-wrap">
      <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" >
          <% featuredSneakers.forEach(function(fs, index) { %>
            <div class="carousel-item <%= (index === 0) ? 'active': '' %>">
              <a href="/sneakers/<%= fs.id %>">
                <img src="<%= fs.cover_photo_url %>" class="d-block w-100" alt="sneakers">
              </a>
              <div class="carousel-caption d-none d-md-block">
                <h5><%= fs.title %></h5>
                <p>$ <%= fs.price %> CAD</p>
              </div>
            </div>
          <% }) %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    <!-- List of Products for everybody-->
    <main class="main">
      <div class="filter-wrap">
        <h1>Sneakers For Sale</h1>
        <form class="range-field my-4 w-25">
          <label for="filterPrice">Filter By Price</label>
          <input type="range" class="custom-range" min="20" max="300" />
        </form>
      </div>
      <section class="shoes-by-seller">
          <% for(let each of sneakers) { %>
          <div class="card" style="width: 22rem;">
            <a href="/sneakers/<%= each.id %>">
              <img src="<%= each.cover_photo_url %>" class="card-img-top" alt="item_photo">
            </a>
            <div class="card-body">
              <h5 class="card-title"><%= each.brand %></h5>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= each.title %></li>
              <li class="list-group-item">Price: $ <%= each.price %> CAD</li>
              <li class="list-group-item">Size: <%= each.size %></li>
            </ul>
          </div>
          <% } %>
        </section>
    </main>
    </section>
  </section>
  </body>
</html>




